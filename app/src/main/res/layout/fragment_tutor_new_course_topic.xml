<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".el.frags.TutorNewCourseSubTopic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:contentPadding="@dimen/fab_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtTopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/imgAddSubTopic"
                    android:layout_toStartOf="@+id/imgAddSubTopic"
                    android:background="@android:color/transparent"
                    android:hint="Topic "
                    android:inputType="text"
                    android:maxLines="2"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/imgAddSubTopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:tint="@color/fbutton_color_wet_asphalt"
                    app:srcCompat="@drawable/ic_add_black_24dp"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ListView
            android:id="@+id/listTopics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:scrollbars="none" />
    </LinearLayout>
</FrameLayout>