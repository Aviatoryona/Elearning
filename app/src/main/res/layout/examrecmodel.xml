<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/coverImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/bgblue"
                tools:ignore="ContentDescription" />

            <com.lid.lib.LabelButtonView
                android:id="@+id/titleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="#03a9f4"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/andela_learning_exam"
                android:textColor="#ffffff"
                app:label_backgroundColor="#C2185B"
                app:label_distance="20dp"
                app:label_height="20dp"
                app:label_orientation="RIGHT_TOP"
                app:label_text="Exam"
                app:label_textSize="22dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtExplore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgMore"
                android:layout_toStartOf="@+id/imgMore"
                android:gravity="center_vertical"
                android:text="@string/explore"
                android:textColor="@color/colorBlack" />

            <ImageView
                android:id="@+id/imgMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:tint="@color/colorBlack"
                app:srcCompat="@drawable/ic_more_vert_black_24dp"
                tools:ignore="ContentDescription" />

        </RelativeLayout>
    </LinearLayout>
    <!--</LinearLayout>-->

</android.support.v7.widget.CardView>