<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_dr"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fbutton_color_wet_asphalt"
        android:padding="@dimen/fab_margin">

        <TextView
            android:id="@+id/txtTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgAddSubTopic"
            android:layout_toStartOf="@+id/imgAddSubTopic"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:text="Introduction "
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/imgAddSubTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tint="@color/colorWhite"
            app:srcCompat="@drawable/ic_check_circle_black_24dp"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <EditText
        android:id="@+id/edtSubTopic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="@dimen/fab_margin"
        android:background="@android:color/transparent"
        android:gravity="start"
        android:hint="Enter sub  topic "
        android:inputType="text"
        android:maxLines="3"
        android:textColor="@color/darkPink"
        tools:ignore="HardcodedText" />
</LinearLayout>